# ============================================================================
# SUPABASE CONFIGURATION
# ============================================================================
# Get these values from: https://supabase.com/dashboard/project/cbzwohfekgxbvkwrll/settings/api

# Client-side (exposed to app) - REQUIRED
EXPO_PUBLIC_SUPABASE_URL=https://cbzwohfekgxbvkwrll.supabase.co
EXPO_PUBLIC_SUPABASE_ANON_KEY=your_anon_key_here

# Server-side (NEVER expose to client) - REQUIRED
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here
SUPABASE_JWT_SECRET=your_jwt_secret_here

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
# Get from: https://supabase.com/dashboard/project/cbzwohfekgxbvkwrll/settings/database

DATABASE_URL=postgresql://postgres:YOUR_PASSWORD@db.cbzwohfekgxbvkwrll.supabase.co:5432/postgres
PGSSL=true

# ============================================================================
# DOMAIN CONFIGURATION
# ============================================================================

DOMAIN=https://www.litxtechuk.com

# ============================================================================
# AGORA CONFIGURATION (for video calls)
# ============================================================================
# Get from: https://console.agora.io/

AGORA_APP_ID=your_agora_app_id
AGORA_APP_CERTIFICATE=your_agora_certificate

# ============================================================================
# JWT CONFIGURATION
# ============================================================================

JWT_SECRET=your_jwt_secret_for_app_auth

# ============================================================================
# ADMIN CONFIGURATION
# ============================================================================
# Admin panel authentication (Vercel-side)

ADMIN_USER=admin
ADMIN_PASS=your_admin_password_here
ADMIN_JWT_SECRET=your_random_32_byte_secret_here
ADMIN_COOKIE_NAME=adm
ADMIN_EMAIL=support@litxtech.com

# Supabase Functions URL (for admin proxy)
SUPABASE_FUNCTION_URL=https://cbzwohfekgxbvkwrll.functions.supabase.co

# Client-side admin API endpoints (exposed to app)
EXPO_PUBLIC_ADMIN_API=https://www.litxtechuk.com/api/admin
EXPO_PUBLIC_ADMIN_WALLET_API=https://www.litxtechuk.com/api/admin/wallet

# CORS allowed origins (comma-separated)
CORS_ALLOWED_ORIGINS=https://www.litxtechuk.com,https://litxtechuk.com

# ============================================================================
# STRIPE CONFIGURATION (for payments)
# ============================================================================
# Get from: https://dashboard.stripe.com/apikeys

# Server-side (NEVER expose to client) - REQUIRED for payments
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Client-side (exposed to app) - REQUIRED for payments
EXPO_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here

# ============================================================================
# INSTRUCTIONS
# ============================================================================
#
# 1. Copy this file to .env
# 2. Replace all "your_*" values with actual credentials
# 3. Never commit .env to git (it's in .gitignore)
# 4. Run: node verify-env.js to check configuration
# 5. Restart dev server after changes
#
# For detailed instructions, see: QUICK-START.md
#
